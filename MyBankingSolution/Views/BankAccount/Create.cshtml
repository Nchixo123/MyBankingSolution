@model BankingSystem.Application.Dtos.CreateAccountDto

@{
    ViewData["Title"] = "Open New Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-bank fs-1 text-primary"></i>
                        <h2 class="mt-3">Open New Account</h2>
                        <p class="text-muted">Choose the type of account you'd like to open.</p>
                    </div>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-4">
                            <label asp-for="AccountType" class="form-label fw-bold">Account Type</label>
                            <select asp-for="AccountType" class="form-select form-select-lg">
                                <option value="">-- Select Account Type --</option>
                                <option value="0">Savings Account</option>
                                <option value="1">Checking Account</option>
                                <option value="2">Business Account</option>
                            </select>
                            <span asp-validation-for="AccountType" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="InitialDeposit" class="form-label fw-bold">Initial Deposit</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">$</span>
                                <input asp-for="InitialDeposit" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="InitialDeposit" class="text-danger small"></span>
                            <small class="text-muted">Minimum deposit: $0.00</small>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <h6 class="alert-heading"><i class="bi bi-info-circle"></i> Account Information</h6>
                            <ul class="mb-0 small">
                                <li><strong>Savings:</strong> Earn interest on your deposits</li>
                                <li><strong>Checking:</strong> For everyday transactions</li>
                                <li><strong>Business:</strong> Designed for business needs</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Open Account
                            </button>
                            <a asp-controller="Account" asp-action="MyAccounts" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to My Accounts
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
