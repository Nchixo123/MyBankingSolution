@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-shield-lock"></i> Admin Dashboard</h2>
        <span class="badge bg-danger">Admin Access</span>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- System Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-primary border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Users</h6>
                            <h3 class="mb-0" id="totalUsers">
                                <span class="spinner-border spinner-border-sm" role="status"></span>
                            </h3>
                        </div>
                        <i class="bi bi-people fs-1 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-success border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Accounts</h6>
                            <h3 class="mb-0" id="totalSystemAccounts">
                                <span class="spinner-border spinner-border-sm" role="status"></span>
                            </h3>
                        </div>
                        <i class="bi bi-wallet2 fs-1 text-success"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-info border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Transactions</h6>
                            <h3 class="mb-0" id="totalSystemTransactions">
                                <span class="spinner-border spinner-border-sm" role="status"></span>
                            </h3>
                        </div>
                        <i class="bi bi-arrow-down-up fs-1 text-info"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-warning border-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">System Balance</h6>
                            <h3 class="mb-0" id="systemBalance">
                                <span class="spinner-border spinner-border-sm" role="status"></span>
                            </h3>
                        </div>
                        <i class="bi bi-currency-dollar fs-1 text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-tools"></i> Admin Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-action="Users" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-people fs-4 d-block mb-2"></i>
                                <span>Manage Users</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Accounts" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-wallet2 fs-4 d-block mb-2"></i>
                                <span>View All Accounts</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Transactions" class="btn btn-outline-info w-100 py-3">
                                <i class="bi bi-list-check fs-4 d-block mb-2"></i>
                                <span>All Transactions</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="AuditLogs" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-journal-text fs-4 d-block mb-2"></i>
                                <span>Audit Logs</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Sections -->
    <div class="row g-4">
        <!-- Recent Users -->
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-plus"></i> Recent Users</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-person-circle fs-1 d-block mb-2"></i>
                        Loading recent users...
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Transactions -->
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Transactions</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-receipt fs-1 d-block mb-2"></i>
                        Loading recent transactions...
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Health -->
    <div class="row g-4 mt-2">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-heartbeat"></i> System Health</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <i class="bi bi-hdd fs-1 text-success"></i>
                            <h6 class="mt-2">Database</h6>
                            <span class="badge bg-success">Connected</span>
                        </div>
                        <div class="col-md-4 text-center">
                            <i class="bi bi-server fs-1 text-success"></i>
                            <h6 class="mt-2">API Services</h6>
                            <span class="badge bg-success">Running</span>
                        </div>
                        <div class="col-md-4 text-center">
                            <i class="bi bi-shield-check fs-1 text-success"></i>
                            <h6 class="mt-2">Security</h6>
                            <span class="badge bg-success">Active</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simulate loading admin dashboard data
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                // Update system stats (placeholder values)
                document.getElementById('totalUsers').textContent = '156';
                document.getElementById('totalSystemAccounts').textContent = '423';
                document.getElementById('totalSystemTransactions').textContent = '1,847';
                document.getElementById('systemBalance').textContent = '$2.5M';
            }, 1000);
        });
    </script>
}
