@model IEnumerable<BankingSystem.Domain.Entities.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-journal-text"></i> Audit Logs</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Admin
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Date &amp; Time</th>
                                <th>User</th>
                                <th>Action</th>
                                <th>Entity</th>
                                <th>Entity ID</th>
                                <th>IP Address</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>
                                        <small>
                                            @log.CreatedAt.ToString("MMM dd, yyyy")<br />
                                            @log.CreatedAt.ToString("hh:mm:ss tt")
                                        </small>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@log.UserName</strong>
                                            <br />
                                            <small class="text-muted">
                                                @log.UserId.Substring(0, Math.Min(8, log.UserId.Length))...
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@log.Action</span>
                                    </td>
                                    <td>@log.Entity</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.EntityId))
                                        {
                                            <small class="text-muted font-monospace">
                                                @log.EntityId.Substring(0, Math.Min(8, log.EntityId.Length))...
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@log.IpAddress</small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.OldValues) || !string.IsNullOrEmpty(log.NewValues))
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-info" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#detailsModal-@log.Id">
                                                <i class="bi bi-eye"></i> View
                                            </button>

                                            <!-- Modal for details -->
                                            <div class="modal fade" id="detailsModal-@log.Id" tabindex="-1">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Audit Log Details</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            @if (!string.IsNullOrEmpty(log.OldValues))
                                                            {
                                                                <h6>Old Values:</h6>
                                                                <pre class="bg-light p-3">@log.OldValues</pre>
                                                            }
                                                            @if (!string.IsNullOrEmpty(log.NewValues))
                                                            {
                                                                <h6>New Values:</h6>
                                                                <pre class="bg-light p-3">@log.NewValues</pre>
                                                            }
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No details</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted text-center">
            <small>Showing @Model.Count() audit log(s)</small>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading"><i class="bi bi-inbox"></i> No Audit Logs Found</h4>
            <p>No audit logs are available at this time.</p>
        </div>
    }
</div>
