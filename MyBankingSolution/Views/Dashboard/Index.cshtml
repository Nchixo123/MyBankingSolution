@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
        <div>
            <span class="text-muted">Welcome, <strong>@User.Identity?.Name</strong></span>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Quick Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-wallet2 fs-1 text-primary mb-2"></i>
                    <h6 class="text-muted mb-1">Total Accounts</h6>
                    <h3 class="mb-0" id="totalAccounts">
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar fs-1 text-success mb-2"></i>
                    <h6 class="text-muted mb-1">Total Balance</h6>
                    <h3 class="mb-0" id="totalBalance">
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-arrow-down-up fs-1 text-info mb-2"></i>
                    <h6 class="text-muted mb-1">Transactions</h6>
                    <h3 class="mb-0" id="totalTransactions">
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up fs-1 text-warning mb-2"></i>
                    <h6 class="text-muted mb-1">Active Accounts</h6>
                    <h3 class="mb-0" id="activeAccounts">
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning-fill"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-controller="Transaction" asp-action="Deposit" class="btn btn-success w-100 py-3">
                                <i class="bi bi-arrow-down-circle fs-4 d-block mb-2"></i>
                                <span>Deposit</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Transaction" asp-action="Withdraw" class="btn btn-warning w-100 py-3">
                                <i class="bi bi-arrow-up-circle fs-4 d-block mb-2"></i>
                                <span>Withdraw</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="Transaction" asp-action="Transfer" class="btn btn-primary w-100 py-3">
                                <i class="bi bi-arrow-left-right fs-4 d-block mb-2"></i>
                                <span>Transfer</span>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-controller="BankAccount" asp-action="Create" class="btn btn-info w-100 py-3">
                                <i class="bi bi-plus-circle fs-4 d-block mb-2"></i>
                                <span>New Account</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="row g-4">
        <!-- Accounts Overview -->
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-wallet2"></i> My Accounts</h5>
                    <a asp-controller="Account" asp-action="MyAccounts" class="btn btn-sm btn-light">
                        View All
                    </a>
                </div>
                <div class="card-body" id="accountsContainer">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-muted mt-2">Loading accounts...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Activity</h5>
                    <a asp-controller="Transaction" asp-action="History" class="btn btn-sm btn-light">
                        View All
                    </a>
                </div>
                <div class="card-body" id="recentActivityContainer">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-muted mt-2">Loading activity...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simulate loading dashboard data
        // In a real application, this would be AJAX calls to your API
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                // Update stats (placeholder values)
                document.getElementById('totalAccounts').textContent = '3';
                document.getElementById('totalBalance').textContent = '$12,345.67';
                document.getElementById('totalTransactions').textContent = '24';
                document.getElementById('activeAccounts').textContent = '3';

                // Update accounts container
                document.getElementById('accountsContainer').innerHTML = `
                    <p class="text-center text-muted">
                        <a asp-controller="Account" asp-action="MyAccounts" class="btn btn-primary">
                            View Your Accounts
                        </a>
                    </p>
                `;

                // Update recent activity
                document.getElementById('recentActivityContainer').innerHTML = `
                    <p class="text-center text-muted">
                        <a asp-controller="Transaction" asp-action="History" class="btn btn-info">
                            View Transaction History
                        </a>
                    </p>
                `;
            }, 1000);
        });
    </script>
}
