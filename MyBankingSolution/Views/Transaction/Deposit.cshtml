@model BankingSystem.Application.Dtos.DepositDto

@{
    ViewData["Title"] = "Deposit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-arrow-down-circle-fill fs-1 text-success"></i>
                        <h2 class="mt-3">Make a Deposit</h2>
                        <p class="text-muted">Add funds to your account</p>
                    </div>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Deposit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-4">
                            <label asp-for="AccountNumber" class="form-label fw-bold">Select Account</label>
                            <select asp-for="AccountNumber" asp-items="ViewBag.Accounts" class="form-select form-select-lg">
                                <option value="">-- Select Account --</option>
                            </select>
                            <span asp-validation-for="AccountNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Amount" class="form-label fw-bold">Amount</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" type="number" step="0.01" min="0.01" class="form-control" placeholder="0.00" autofocus />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">Description (Optional)</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Add a note about this deposit"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle"></i> Your deposit will be processed immediately and reflected in your account balance.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Complete Deposit
                            </button>
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
