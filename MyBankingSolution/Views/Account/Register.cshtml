@model BankingSystem.Application.Dtos.RegisterDto

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-plus-fill fs-1 text-primary"></i>
                        <h2 class="mt-3">Create Account</h2>
                        <p class="text-muted">Join us today and start banking with confidence.</p>
                    </div>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <h5 class="mb-3 text-primary">Personal Information</h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">
                                    First Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">
                                    Last Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">
                                    Email Address <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="your.email@example.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label">
                                    Phone Number <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="+1234567890" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                <small class="text-muted">Format: +[country code][number] (e.g., +1234567890)</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">
                                Date of Birth <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                <input asp-for="DateOfBirth" type="date" class="form-control" max="@DateTime.Today.AddYears(-18).ToString("yyyy-MM-dd")" />
                            </div>
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            <small class="text-muted">You must be at least 18 years old</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                Address <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                <input asp-for="Address" class="form-control" placeholder="Enter your full address" />
                            </div>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                            <small class="text-muted">Minimum 10 characters</small>
                        </div>

                        <h5 class="mb-3 mt-4 text-primary">Security</h5>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                Password <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Create a strong password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <div class="mt-2">
                                <small class="text-muted d-block">Password must contain:</small>
                                <small class="text-muted d-block">• At least 8 characters</small>
                                <small class="text-muted d-block">• One uppercase letter (A-Z)</small>
                                <small class="text-muted d-block">• One lowercase letter (a-z)</small>
                                <small class="text-muted d-block">• One number (0-9)</small>
                                <small class="text-muted d-block">• One special character (e.g., !@@$%^&*)</small>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">
                                Confirm Password <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter your password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-plus"></i> Create Account
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">Already have an account? 
                                <a asp-action="Login" class="text-decoration-none fw-bold">Login here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Set max date for date of birth (18 years ago)
        const dateInput = document.querySelector('input[type="date"]');
        if (dateInput) {
            const maxDate = new Date();
            maxDate.setFullYear(maxDate.getFullYear() - 18);
            dateInput.max = maxDate.toISOString().split('T')[0];
        }
    </script>
}
